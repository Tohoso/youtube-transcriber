# YouTube Transcriber Production Environment Configuration
# ========================================================

# API Configuration
YOUTUBE_API_KEY=${YOUTUBE_API_KEY}
API_QUOTA_LIMIT=10000

# Application Settings
APP_ENV=production
APP_NAME="YouTube Transcriber"
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Processing Configuration
CONCURRENT_LIMIT=10
RATE_LIMIT_PER_MINUTE=60
MAX_CHANNELS_PARALLEL=5
MAX_VIDEOS_PER_CHANNEL=10
SKIP_PRIVATE_VIDEOS=true
SKIP_LIVE_STREAMS=true
REQUEST_TIMEOUT_SECONDS=30

# Batch Processing
BATCH_SIZE=10
MEMORY_LIMIT_MB=2048
SAVE_PROGRESS=true
CHANNEL_TIMEOUT_MINUTES=60

# Output Configuration
OUTPUT_DIRECTORY=/app/output
DEFAULT_FORMAT=txt
INCLUDE_METADATA=true
INCLUDE_TIMESTAMPS=false
MAX_FILENAME_LENGTH=100

# Security
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_DAYS=30
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_IP=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8080

# Database (optional, for future use)
DATABASE_URL=
REDIS_URL=

# Cloud Storage (optional)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Error Reporting
SENTRY_DSN=
ERROR_REPORTING_ENABLED=false

# Feature Flags
ENABLE_CHANNEL_SEARCH=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_EXPORT_API=true